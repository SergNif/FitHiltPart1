<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.bignerdranch.android.finnesretrofitmvvm.presentation.fragments.MainViewModel"/>
        <variable
            name="vmPage7"
            type="MainViewModel" />
        <variable
            name="imgLoadPage7"
            type="com.bignerdranch.android.finnesretrofitmvvm.presentation.fragments.ui.adapter.ImageLoader" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_data_fon_white"
    android:textColor="#190F22"
    tools:context=".fragments.Page7Data2Fragment">


    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/lin_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/ic_logo" />

        <TextView

            android:text="Полезно - значит вкусно"
            style="@style/up_grin_text"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/text_enter_data_page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tienne_black"
        android:text="ПРОДУКТЫ"
        android:textColor="@color/red_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick_page_4_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_up_page3"
        android:text="Выберите продукты, которые Вы хотели бы\nдобавить в Ваш рацион питания"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_enter_data_page4"
        app:layout_constraintVertical_bias="0.00"
        style="@style/middle_text_style"/>

    <LinearLayout
        android:id="@+id/lin_lay1_vertcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_up_page3"
        app:layout_constraintVertical_bias="0.03">


        <LinearLayout
            android:id="@+id/lin_lay2_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5sp">

            <TextView
                android:id="@+id/text_page6_egg"
                android:text="Яйца"
                android:src="@{vmPage7.dataPage7.egg ? imgLoadPage7.imageResPage5: imgLoadPage7.imageResPage5NoPress}"
                style="@style/text_data_page5"
                />

            <TextView
                android:id="@+id/text_page6_chees"
                android:text="Сыр"
                android:src="@{vmPage7.dataPage7.cheese ? imgLoadPage7.imageResPage5: imgLoadPage7.imageResPage5NoPress}"
                style="@style/text_data_page5"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay4_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5sp">
            <TextView

                android:id="@+id/text_page6_nut"
                android:text="Орехи"
                android:src="@{vmPage7.dataPage7.nuts ? imgLoadPage7.imageResPage5: imgLoadPage7.imageResPage5NoPress}"
                style="@style/text_data_page5"
                />
            <TextView
                android:id="@+id/text_page6_cottage_cheese"
                android:text="Творог"
                android:src="@{vmPage7.dataPage7.cottage ? imgLoadPage7.imageResPage5: imgLoadPage7.imageResPage5NoPress}"
                style="@style/text_data_page5"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay5_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5sp">

            <TextView
                android:id="@+id/text_page6_kefir"
                android:text="Кефир"
                android:src="@{vmPage7.dataPage7.kefir ? imgLoadPage7.imageResPage5: imgLoadPage7.imageResPage5NoPress}"
                style="@style/text_data_page5"
                />

            <TextView
                android:id="@+id/text_page6_yogurt"
                android:text="Йогурт"
                android:src="@{vmPage7.dataPage7.yogurt ? imgLoadPage7.imageResPage5: imgLoadPage7.imageResPage5NoPress}"
                style="@style/text_data_page5"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="238dp"
        android:layout_height="@dimen/hight_40dp"
        android:layout_marginBottom="60sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/text_back"
            android:layout_width="@dimen/hight_40dp"
            android:layout_height="@dimen/hight_40dp"
            android:background="@drawable/ic_button_previos" />

        <TextView
            android:id="@+id/text_next"
            android:layout_width="159dp"
            android:layout_height="27dp"
            android:layout_marginStart="40dp"

            android:layout_marginTop="10sp"
            android:background="@drawable/ic_button_next"
            android:fontFamily="@font/roboto_condensed_regular"
            android:paddingTop="2dp"
            android:text="ПРОДОЛЖИТЬ"
            android:textAlignment="center"
            android:textColor="@color/color_text_up_black"
            android:textSize="15sp"
            android:textStyle="bold"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_footer_image"
        android:layout_width="318dp"
        android:layout_height="@dimen/hight_40dp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/footer_image"
            android:layout_width="318dp"
            android:layout_height="@dimen/hight_40dp"


            android:background="@drawable/footer_image" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pick_page_4_image"
        android:layout_width="220sp"
        android:layout_height="206sp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/pict_page_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_lay1"
        app:layout_constraintVertical_bias="0.0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>


